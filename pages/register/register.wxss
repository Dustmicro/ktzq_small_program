.input-group {
  margin-bottom: 10px;
  position: relative;
}

input {
  width: 95%;
  padding: 5px;
  border: 1px solid #ddd;
  border-radius: 4px;
}

.register-btn {
  width: 40%;
  padding: 1px;
  background-color: #1aad19;
  color: #fff;
  text-align: center;
  border: none;
  border-radius: 4px;
  font-size: 16px;
  cursor: pointer;
}

.register-btn:hover {
  background-color: #1a8e15;
}
